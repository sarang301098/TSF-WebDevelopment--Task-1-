<html>
    <%- include('head.ejs') %>
<body>

    <%- include('nav.ejs') %>
    <center>
    <div class="shadow-lg p-3 mb-5 mt-5 bg-white rounded text-center w-50">
    <form method="POST" action="/add" >
        
        <div class="form-group row" >
            <label for="static Active" class="col-sm-2 col-form-label">Active</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" name="active" id="active" value="true">
            </div>
          </div><hr>

        <div class="form-group row">
            <label for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
              <input type="text" required class="form-control" id="name" name="name" placeholder="Enter Name ">
            </div>
          </div>

        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input type="text" required class="form-control" id="email" name="email" placeholder="Enter Email">
          </div>
        </div>

        <div class="form-group row">
            <label for="amount" class="col-sm-2 col-form-label">Total Amount</label>
            <div class="col-sm-10">
              <input type="number" required class="form-control" id="amount" name="amount" placeholder="Enter Amount">
            </div>
          </div><hr>
          <!-- s<a href="/transaction"><button type="button" class="btn btn-primary mb-2">Back</button></a> -->
          <button type="submit" class="btn btn-primary mb-2" onclick="myFunction()">ADD</button>
      </form>
</div>
</center>
    <%- include('footer.ejs') %>
</body>

<script>
  function myFunction() {
    alert("You Successfully Add User");
}
</script>
</html>