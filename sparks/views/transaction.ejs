<html>
    <%- include('head.ejs') %>
<body>

    <%- include('nav.ejs') %>

    <center>
      <div class="shadow-lg p-3 mt-5 mb-5 bg-white rounded text-center w-75">
    <table class="table table-hover center ">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Amount</th>
            <th scope="col">VIEW</th>
            <th scope="col">ACTION</th>
            <th scope="col">DELETE</th>
          </tr>
        </thead>
        <% for(var i=0; i<alldata.length; i++){ %>
        <tbody>
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= alldata[i].name  %></td>
            <td><%= alldata[i].email  %></td>
            <td><%= alldata[i].amount  %></td>
            <td><a href="transaction/view/<%= alldata[i]._id %>"<button type="button" class="btn btn-outline-secondary"  id=<%= alldata[i]._id %>>View</button></a></td>
            <td><a href="transfer/<%= alldata[i]._id %>"<button type="button" class="btn btn-outline-secondary"  id=<%= alldata[i]._id %>>Transaction</button></a></td>
            <td><a href="delete/<%= alldata[i]._id %>"<button type="button" class="btn btn-outline-secondary"  id=<%= alldata[i]._id %>>Delete</button></a></td>
          </tr>
          <%}%>
        </tbody>
      </table>
      </div>
    </center>
    <%- include('footer.ejs') %>
</body>
</html>